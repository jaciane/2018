<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Petrobras | @ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    @Styles.Render("~/Content/css")
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN THEME GLOBAL STYLES -->
    @Styles.Render("~/ThemeGlobal/css")
    <!-- END THEME GLOBAL STYLES -->
    <!-- BEGIN THEME LAYOUT STYLES -->
    @Styles.Render("~/Theme/css")
    <!-- END THEME LAYOUT STYLES -->
    <!-- BEGIN LOGIN STYLE -->
    @Styles.Render("~/Login/css")
    <!-- END LOGIN STYLE -->
    @Styles.Render("~/Custom/css")
</head>

<body class="login">
    <!-- BEGIN LOGO -->
    <div class="col-md-4 col-md-offset-4 text-center">
        <h3 class="font-white bold">
            Sistema Inteligente de Soldagem
            <hr class="border-grey-mint" />
        </h3>
    </div>
    <div class="logo">
        <div href="" class="col-md-12">
            <img src="~/Content/img/br_logo_no_margin.png" alt="" />
        </div>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class=" col-md-12">
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN CORE PLUGINS -->
    @Scripts.Render("~/Core/js")
    <!-- END CORE PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    @Scripts.Render("~/ThemeGlobal/js")
    <!-- END THEME GLOBAL SCRIPTS -->
    <!-- BEGIN THEME LAYOUT SCRIPTS -->
    @Scripts.Render("~/Theme/js")
    <!-- END THEME LAYOUT SCRIPTS -->
</body>
</html>