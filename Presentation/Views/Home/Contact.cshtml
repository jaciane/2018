@model Application.ViewModels.ContactViewModel
<section id="Contact">
    <div class="container">
        <div class="page-content-inner">
            <div class="portlet light ">
                @*<div class="portlet-title">*@
                <div class="caption">
                    <i class="fa fa-envelope font-green-sharp"></i>
                    <span class="caption-subject font-green bold uppercase">Contate-nos</span>
                </div>
                @*</div>*@
                <div class="portlet-body list-item-content">
                    @using (Html.BeginForm("Contact", "Home", null, FormMethod.Post, new { role = "form", id = "contactForm" }))
                    {
                        @Html.AntiForgeryToken()
                        if (TempData["mailMessage"] != null)
                        {
                            <h4 class="form-title font-blue text-center">@TempData["mailMessage"]</h4>
                        }
                            <div class="col-md-6">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                <div class="c-contact">
                                    <div class="c-content-title-1">
                                        <div class="form-group">
                                            <br />
                                            <h3 class="uppercase">
                                                @Html.Label("Mantenha Contato", new { @class = "uppercase" })
                                            </h3>
                                        </div>
                                        <div class="c-line-left bg-dark" style=" text-align: justify;"></div>
                                        <p class="c-font-lowercase">Nossa linha de atendimento está sempre aberta para receber qualquer consulta ou feedback. Por favor, sinta-se à vontade para nos enviar um e-mail por meio do formulário abaixo e nós retornaremos para você assim que pudermos.</p>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.EmitterName, "", new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.EmitterName, new { @class = "form-control", @placeholder = "Seu nome" })
                                        @Html.ValidationMessageFor(m => m.EmitterName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.From, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.From, new { @class = "form-control", @placeholder = "Seu e-mail" })
                                        @Html.ValidationMessageFor(m => m.From, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Phone, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Seu telefone" })
                                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Body, new { @class = "control-label" })
                                        @Html.TextAreaFor(m => m.Body, new { @class = "form-control", @rows = "8", cols = "12", @placeholder = "Escreva o comentário aqui ..." })
                                        @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn green" name="send" id="send" value="Enviar">
                                    </div>
                                </div>
                            </div>
                        @*<div class="col-md-6">
                                <img src="~/Metronic/assets/layouts/layout3/img/mail.jpg"  />
                            </div>*@

                    }
                </div>
            </div>
        </div>
    </div>
</section>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<script>

    $('input[type=submit]').click(function () {
        $(this).attr('disabled', 'disabled');
        // $(this).parents('form').submit();
        //$("#contactForm")[0].reset();
        alert("dsf")
    });

    $(document).ready(function () {
        var formID = $('#contactForm');
       $(formID).get(0).reset();
    });

</script>