@model Identity.Model.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}

<div class="modal-header">
    <h4 class="modal-title">Cadastrar Usuário</h4>
</div>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "horizontal-form", role = "form" }))
{
    @Html.AntiForgeryToken()
<div class="modal-body">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-body text-left">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Nome", new { @class = "control-label" })
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("E-mail", new { @class = "control-label" })
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="contol-label">CPF</label>
                    @Html.EditorFor(m => m.Cpf, new { htmlAttributes = new { @class = "form-control", @id = "cpf" } })
                </div>
            </div>
            @*<div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("Empresa", new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.IdCompany, new SelectList(Model.CompanyList, "ID", "NAME"), "", new { @class = "form-control" })
                    </div>
                </div>*@
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Perfil", new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.IdProfile, new SelectList(Model.ProfileList, "ID", "NAME"), new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        @*<button type="submit" class="btn green-meadow"> Salvar Usuário </button>*@
       <input type="submit" class="btn btn-default" value="Register" />
    </div>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
